---
import CardLaunch from '../components/CardLaunch.astro'
import { getLatestLaunches } from '../services/spacex.ts'
// get rid of the other atributtes of the launch that CardLaunch doesn't use to solve the warning

const launches = await getLatestLaunches()

console.log(launches)
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    

    {
        launches.map(launch => (
            <CardLaunch
                id={launch.id}
                img={launch.links.patch.small}
                details={launch.details}
                flightNumber={launch.flight_number}
                success={launch.success}
                                    />
        ))
    }
</div>